         $("#swiper1 .swiper-container").height(imgh1).width(wh);
         $("#swiper1 .swiper-container .detail-img").height(imgh1).width(wh);
        
        // 
        var imgh2 = 300*(wh-20)/620;
        $(".prd-img-div").height(imgh2);        
    });
