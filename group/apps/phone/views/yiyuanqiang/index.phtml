        $("#loading").hide();

        $('.lazymy').lazyload({ 
            placeholder : "/yiyuanqiang/images/grey.gif", 
            effect      : "fadeIn",
            event :"scroll",
            threshold: -150
        }); 

        notice(2000);


        // 城市选择出现
        $("#citySelect").click(function(){
            var cityBox = $("#cityBox");
            var i= cityBox.attr("show");
            if(i == 0){
                cityBox.show();
                cityBox.attr("show",1);
                $("#menu").hide();
                $("#menu").attr("show",0);
            }else{
                cityBox.hide();
                cityBox.attr("show",0);
            }
        });
        // 城市选择消失
        $("#cityBox .blackBg").click(function(){
            $("#cityBox").hide();
        });

